@model SysParkingC_.Models.Estacionamento

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-4">
    <h1 class="mb-4">Criar Estacionamento</h1>

    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-10">
            <form asp-action="Create" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Campo Nome -->
                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <!-- Campo Endereço -->
                <div class="mb-3">
                    <label asp-for="Endereco" class="form-label"></label>
                    <input asp-for="Endereco" class="form-control" />
                    <span asp-validation-for="Endereco" class="text-danger"></span>
                </div>

                <!-- Campo Número de Vagas Disponíveis -->
                <div class="mb-3">
                    <label asp-for="NumeroVagasDisponiveis" class="form-label"></label>
                    <input asp-for="NumeroVagasDisponiveis" type="number" class="form-control" />
                    <span asp-validation-for="NumeroVagasDisponiveis" class="text-danger"></span>
                </div>

                <!-- Campo Preço 15 Min -->
                <div class="mb-3">
                    <label asp-for="Preco15Min" class="form-label"></label>
                    <input asp-for="Preco15Min" type="number" step="0.01" class="form-control" />
                    <span asp-validation-for="Preco15Min" class="text-danger"></span>
                </div>

                <!-- Campo Preço 30 Min -->
                <div class="mb-3">
                    <label asp-for="Preco30Min" class="form-label"></label>
                    <input asp-for="Preco30Min" type="number" step="0.01" class="form-control" />
                    <span asp-validation-for="Preco30Min" class="text-danger"></span>
                </div>

                <!-- Campo Preço 1 Hora -->
                <div class="mb-3">
                    <label asp-for="Preco1Hora" class="form-label"></label>
                    <input asp-for="Preco1Hora" type="number" step="0.01" class="form-control" />
                    <span asp-validation-for="Preco1Hora" class="text-danger"></span>
                </div>

                <!-- Campo Preço Diário -->
                <div class="mb-3">
                    <label asp-for="PrecoDiaria" class="form-label"></label>
                    <input asp-for="PrecoDiaria" type="number" step="0.01" class="form-control" />
                    <span asp-validation-for="PrecoDiaria" class="text-danger"></span>
                </div>

                <!-- Campo Preço Pernoite -->
                <div class="mb-3">
                    <label asp-for="PrecoPernoite" class="form-label"></label>
                    <input asp-for="PrecoPernoite" type="number" step="0.01" class="form-control" />
                    <span asp-validation-for="PrecoPernoite" class="text-danger"></span>
                </div>

                <!-- Campo Preço Mensal -->
                <div class="mb-3">
                    <label asp-for="PrecoMensal" class="form-label"></label>
                    <input asp-for="PrecoMensal" type="number" step="0.01" class="form-control" />
                    <span asp-validation-for="PrecoMensal" class="text-danger"></span>
                </div>

                <!-- Botão de Enviar -->
                <div class="d-grid">
                    <input type="submit" value="Criar" class="btn btn-primary" />
                </div>
            </form>

            <!-- Botão para Voltar -->
            <div class="mt-4 text-center">
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                    <i class="bi bi-arrow-left-circle"></i> Voltar para a Lista
                </a>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
