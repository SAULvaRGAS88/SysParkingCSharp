@model SysParkingC_.Models.Estacionamento

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar Estacionamento</h1>

<h3>Você tem certeza que deseja excluir este registro?</h3>
<div>
    <h4>Estacionamento</h4>
    <hr />
    <dl class="row">
        <!-- Nome -->
        <dt class="col-sm-2 fw-bold">@Html.DisplayNameFor(model => model.Name)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>

        <!-- Endereço -->
        <dt class="col-sm-2 fw-bold">@Html.DisplayNameFor(model => model.Endereco)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Endereco)</dd>

        <!-- Vagas Disponíveis -->
        <dt class="col-sm-2 fw-bold">@Html.DisplayNameFor(model => model.NumeroVagasDisponiveis)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.NumeroVagasDisponiveis)</dd>

        <!-- Preço 15 Min -->
        <dt class="col-sm-2 fw-bold">@Html.DisplayNameFor(model => model.Preco15Min)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Preco15Min)</dd>

        <!-- Preço 30 Min -->
        <dt class="col-sm-2 fw-bold">@Html.DisplayNameFor(model => model.Preco30Min)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Preco30Min)</dd>

        <!-- Preço 1 Hora -->
        <dt class="col-sm-2 fw-bold">@Html.DisplayNameFor(model => model.Preco1Hora)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Preco1Hora)</dd>

        <!-- Preço Diário -->
        <dt class="col-sm-2 fw-bold">@Html.DisplayNameFor(model => model.PrecoDiaria)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.PrecoDiaria)</dd>

        <!-- Preço Pernoite -->
        <dt class="col-sm-2 fw-bold">@Html.DisplayNameFor(model => model.PrecoPernoite)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.PrecoPernoite)</dd>

        <!-- Preço Mensal -->
        <dt class="col-sm-2 fw-bold">@Html.DisplayNameFor(model => model.PrecoMensal)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.PrecoMensal)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <!-- Botão com ícone Delete -->
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash me-2"></i> Deletar
        </button>
        |
        <!-- Link com ícone Back -->
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle me-2"></i> Voltar para Lista
        </a>
    </form>
</div>
