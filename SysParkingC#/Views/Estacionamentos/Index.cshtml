@model IEnumerable<SysParkingC_.Models.Estacionamento>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-4">
    <h1 class="mb-4">Estacionamentos</h1>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i> Novo Estacionamento
        </a>
    </div>


    <!-- Cards Responsivos usando Grid -->
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                        <p class="card-text"><strong>Endereço:</strong> @Html.DisplayFor(modelItem => item.Endereco)</p>
                        <p class="card-text"><strong>Número de vagas disponíveis:</strong> @Html.DisplayFor(modelItem => item.NumeroVagasDisponiveis)</p>
                        <p class="card-text"><strong>Preço 15 min:</strong> @item.Preco15Min.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("pt-BR"))</p>
                        <p class="card-text"><strong>Preço 30 min:</strong> @item.Preco30Min.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("pt-BR"))</p>
                        <p class="card-text"><strong>Preço por 1 hora:</strong> @item.Preco1Hora.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("pt-BR"))</p>
                        <p class="card-text"><strong>Preço diário:</strong> @item.PrecoDiaria.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("pt-BR"))</p>
                        <p class="card-text"><strong>Preço por pernoite:</strong> @item.PrecoPernoite.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("pt-BR"))</p>
                        <p class="card-text"><strong>Preço mensal:</strong> @item.PrecoMensal.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("pt-BR"))</p>
                    </div>
                    <div class="card-footer text-center">
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning d-flex flex-column">
                                <span class="bi bi-pencil-fill me-1"></span>
                                <p class="m-0 d-inline">Editar</p>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info d-flex flex-column">
                                <span class="bi bi-info-circle-fill me-1"></span>
                                <p class="m-0 d-inline">Detalhes</p>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger d-flex flex-column">
                                <span class="bi bi-trash-fill me-1"></span>
                                <p class="m-0 d-inline">Deletar</p>
                            </a>
                        </div>


                    </div>
                </div>
            </div>
        }
    </div>
</div>
