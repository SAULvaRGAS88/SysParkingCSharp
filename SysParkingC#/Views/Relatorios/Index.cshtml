@model IEnumerable<SysParkingC_.Models.Relatorio>

@{
    ViewData["Title"] = "Relatório Geral";
}

<h2>@ViewData["Title"]</h2>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Total de Veículos</th>
                <th>Total Arrecadado</th>
                <th>Tempo Total (horas)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.TotalVeiculosEstacionados</td>
                    <td>@item.TotalArrecadado.ToString("C")</td>
                    <td>@item.TempoTotalPermanenciaHoras.ToString("N2")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Nenhum dado disponível no relatório.</p>
}
