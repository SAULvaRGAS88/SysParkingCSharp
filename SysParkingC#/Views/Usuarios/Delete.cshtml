@model SysParkingC_.Models.Usuario

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-4">
    <h1 class="mb-4">Deletar Usuário</h1>

    <h3>Você tem certeza que deseja excluir este registro?</h3>
    <div>
        <h4>Usuário</h4>
        <hr />
        <dl class="row">
            <!-- Nome -->
            <dt class="col-sm-2 fw-bold">@Html.DisplayNameFor(model => model.Nome)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Nome)</dd>

            <!-- Telefone -->
            <dt class="col-sm-2 fw-bold">@Html.DisplayNameFor(model => model.Telefone)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Telefone)</dd>

            <!-- Endereço -->
            <dt class="col-sm-2 fw-bold">@Html.DisplayNameFor(model => model.Endereco)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Endereco)</dd>

            <!-- Senha -->
            <dt class="col-sm-2 fw-bold">@Html.DisplayNameFor(model => model.Senha)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Senha)</dd>

            <!-- Email -->
            <dt class="col-sm-2 fw-bold">@Html.DisplayNameFor(model => model.Email)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Email)</dd>

            <!-- Estacionamento -->
            <dt class="col-sm-2 fw-bold">@Html.DisplayNameFor(model => model.Estacionamento)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Estacionamento.Name)</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <!-- Botão Deletar com Ícone -->
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash me-2"></i> Deletar
            </button>
            |
            <!-- Link Voltar para Lista com Ícone -->
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle me-2"></i> Voltar para Lista
            </a>
        </form>
    </div>
</div>
