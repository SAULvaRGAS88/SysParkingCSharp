@model SysParkingC_.Models.Carro

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-4">
    <h1 class="mb-4">Detalhes do Carro</h1>

    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10 col-sm-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title mb-3">Informações do Carro</h4>
                    <hr />
                    <div class="mb-3 row">
                        <label class="col-sm-4 col-form-label fw-bold">Marca:</label>
                        <div class="col-sm-8">
                            <p class="form-control-plaintext">@Html.DisplayFor(model => model.Marca)</p>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label class="col-sm-4 col-form-label fw-bold">Modelo:</label>
                        <div class="col-sm-8">
                            <p class="form-control-plaintext">@Html.DisplayFor(model => model.Modelo)</p>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label class="col-sm-4 col-form-label fw-bold">Cor:</label>
                        <div class="col-sm-8">
                            <p class="form-control-plaintext">@Html.DisplayFor(model => model.Cor)</p>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label class="col-sm-4 col-form-label fw-bold">Placa:</label>
                        <div class="col-sm-8">
                            <p class="form-control-plaintext">@Html.DisplayFor(model => model.Placa)</p>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label class="col-sm-4 col-form-label fw-bold">Data Entrada:</label>
                        <div class="col-sm-8">
                            <p class="form-control-plaintext">@Html.DisplayFor(model => model.DataEntrada)</p>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label class="col-sm-4 col-form-label fw-bold">Hora Entrada:</label>
                        <div class="col-sm-8">
                            <p class="form-control-plaintext">@Html.DisplayFor(model => model.HoraEntrada)</p>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label class="col-sm-4 col-form-label fw-bold">Estacionamento:</label>
                        <div class="col-sm-8">
                            <p class="form-control-plaintext">@Html.DisplayFor(model => model.Estacionamento.Name)</p>
                        </div>
                    </div>
                    <div class="mt-4 text-center">
                        <!-- Botão Editar com Ícone -->
                        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
                            <i class="bi bi-pencil-square me-2"></i> Editar
                        </a>
                        <!-- Botão Voltar com Ícone -->
                        <a asp-action="Index" class="btn btn-secondary ms-2">
                            <i class="bi bi-arrow-left-circle me-2"></i> Voltar para a Lista
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
