@model SysParkingC_.Models.Carro

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-4">
    <h1 class="mb-4">Deletar Carro</h1>

    <h3>Você tem certeza que deseja excluir este registro?</h3>
    <div>
        <h4>Carro</h4>
        <hr />
        <dl class="row">
            <!-- Marca -->
            <dt class="col-sm-2 fw-bold">@Html.DisplayNameFor(model => model.Marca)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Marca)</dd>

            <!-- Modelo -->
            <dt class="col-sm-2 fw-bold">@Html.DisplayNameFor(model => model.Modelo)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Modelo)</dd>

            <!-- Cor -->
            <dt class="col-sm-2 fw-bold">@Html.DisplayNameFor(model => model.Cor)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Cor)</dd>

            <!-- Placa -->
            <dt class="col-sm-2 fw-bold">@Html.DisplayNameFor(model => model.Placa)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Placa)</dd>

            <!-- Data Entrada -->
            <dt class="col-sm-2 fw-bold">@Html.DisplayNameFor(model => model.DataEntrada)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.DataEntrada)</dd>

            <!-- Hora Entrada -->
            <dt class="col-sm-2 fw-bold">@Html.DisplayNameFor(model => model.HoraEntrada)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.HoraEntrada)</dd>

            <!-- Estacionamento -->
            <dt class="col-sm-2 fw-bold">@Html.DisplayNameFor(model => model.Estacionamento)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Estacionamento.Name)</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <!-- Botão Deletar com Ícone -->
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash me-2"></i> Deletar
            </button>
            |
            <!-- Link Voltar para Lista com Ícone -->
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle me-2"></i> Voltar para Lista
            </a>
        </form>
    </div>
</div>
