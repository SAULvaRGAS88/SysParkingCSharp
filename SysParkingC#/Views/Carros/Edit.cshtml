@model SysParkingC_.Models.Carro

@{
    ViewData["Title"] = "Editar Carro";
}

<div class="container mt-4">
    <h1 class="mb-4">Editar Carro</h1>

    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <form asp-action="Edit" class="needs-validation" novalidate>
                <!-- Mensagens de Erro Globais -->
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Campo ID Oculto -->
                <input type="hidden" asp-for="Id" />

                <!-- Campo Marca -->
                <div class="mb-3">
                    <label asp-for="Marca" class="form-label"></label>
                    <input asp-for="Marca" class="form-control" />
                    <span asp-validation-for="Marca" class="text-danger"></span>
                </div>

                <!-- Campo Modelo -->
                <div class="mb-3">
                    <label asp-for="Modelo" class="form-label"></label>
                    <input asp-for="Modelo" class="form-control" />
                    <span asp-validation-for="Modelo" class="text-danger"></span>
                </div>

                <!-- Campo Cor -->
                <div class="mb-3">
                    <label asp-for="Cor" class="form-label"></label>
                    <input asp-for="Cor" class="form-control" />
                    <span asp-validation-for="Cor" class="text-danger"></span>
                </div>

                <!-- Campo Placa -->
                <div class="mb-3">
                    <label asp-for="Placa" class="form-label"></label>
                    <input asp-for="Placa" class="form-control" />
                    <span asp-validation-for="Placa" class="text-danger"></span>
                </div>

                <!-- Campo Data de Entrada -->
                <div class="mb-3">
                    <label asp-for="DataEntrada" class="form-label"></label>
                    <input asp-for="DataEntrada" type="date" class="form-control" />
                    <span asp-validation-for="DataEntrada" class="text-danger"></span>
                </div>

                <!-- Campo Hora de Entrada -->
                <div class="mb-3">
                    <label asp-for="HoraEntrada" class="form-label"></label>
                    <input asp-for="HoraEntrada" type="time" class="form-control" />
                    <span asp-validation-for="HoraEntrada" class="text-danger"></span>
                </div>

                <!-- Campo Estacionamento com Ícone -->
                <div class="mb-3 position-relative">
                    <label asp-for="EstacionamentoId" class="form-label">Estacionamento</label>
                    <div class="dropdown-container">
                        <select asp-for="EstacionamentoId" class="form-control" asp-items="ViewBag.EstacionamentoId"></select>
                        <span class="dropdown-icon">
                            <i class="bi bi-chevron-down text-black"></i>
                        </span>
                    </div>
                    <span asp-validation-for="EstacionamentoId" class="text-danger"></span>
                </div>


                <!-- Botão Salvar -->
                <div class="d-grid">
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                </div>
            </form>

            <!-- Botão para Voltar -->
            <div class="mt-4 text-center">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Voltar para a Lista
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
