@model SysParkingC_.Models.Carro

<h1>Gerar Nota Fiscal</h1>

<p>Dados do veículo para geração da nota:</p>
<ul>
    <li><strong>Marca:</strong> @Model.Marca</li>
    <li><strong>Modelo:</strong> @Model.Modelo</li>
    <li><strong>Placa:</strong> @Model.Placa</li>
    <li><strong>Cor:</strong> @Model.Cor</li>
    <li><strong>Data de Entrada:</strong> @Model.DataEntrada</li>
    <li><strong>Hora de Entrada:</strong> @Model.HoraEntrada</li>
    <li><strong>Tempo de Permanência:</strong> @Model.TempoPermanencia.ToString("N0") minutos</li>
    <li><strong>Valor Total:</strong> @Model.ValorTotal</li>
</ul>

<form asp-action="GerarNotaFiscalConfirmada" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-primary">Gerar Nota Fiscal</button>
</form>
