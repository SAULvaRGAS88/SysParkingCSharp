@model SysParkingC_.Models.NotaFiscal

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-4">
    <h1 class="mb-4">Detalhes da Nota Fiscal</h1>

    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10 col-sm-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title mb-3">Informações da Nota Fiscal</h4>
                    <hr />
                    <div class="mb-3 row">
                        <label class="col-sm-4 col-form-label fw-bold">Carro ID:</label>
                        <div class="col-sm-8">
                            <p class="form-control-plaintext">@Html.DisplayFor(model => model.Carro.Id)</p>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label class="col-sm-4 col-form-label fw-bold">Placa:</label>
                        <div class="col-sm-8">
                            <p class="form-control-plaintext">@Html.DisplayFor(model => model.Carro.Placa)</p>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label class="col-sm-4 col-form-label fw-bold">Marca:</label>
                        <div class="col-sm-8">
                            <p class="form-control-plaintext">@Html.DisplayFor(model => model.Carro.Marca)</p>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label class="col-sm-4 col-form-label fw-bold">Modelo:</label>
                        <div class="col-sm-8">
                            <p class="form-control-plaintext">@Html.DisplayFor(model => model.Carro.Modelo)</p>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label class="col-sm-4 col-form-label fw-bold">Data Saída:</label>
                        <div class="col-sm-8">
                            <p class="form-control-plaintext">@Html.DisplayFor(model => model.DataSaida)</p>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label class="col-sm-4 col-form-label fw-bold">Hora Saída:</label>
                        <div class="col-sm-8">
                            <p class="form-control-plaintext">@Html.DisplayFor(model => model.HoraSaida)</p>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label class="col-sm-4 col-form-label fw-bold">Pagamento:</label>
                        <div class="col-sm-8">
                            <p class="form-control-plaintext">@Html.DisplayFor(model => model.Pagamento)</p>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label class="col-sm-4 col-form-label fw-bold">Valor Total:</label>
                        <div class="col-sm-8">
                            <p class="form-control-plaintext">@Html.DisplayFor(model => model.ValorTotal)</p>
                        </div>
                    </div>
                    <div class="mt-4 text-center">
                        <!-- Botão Voltar com Ícone -->
                        <a asp-action="Index" class="btn btn-secondary ms-2">
                            <i class="bi bi-arrow-left-circle me-2"></i> Voltar para a Lista
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
