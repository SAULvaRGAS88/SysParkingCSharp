@model IEnumerable<SysParkingC_.Models.NotaFiscal>

@{
    ViewData["Title"] = "Notas Fiscais";
}

<div class="container mt-4">
    <h1 class="mb-4">Notas Fiscais</h1>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm" style="height: 250px; padding: 10px;">
                    <div class="card-body" style="font-size: 0.9rem; padding: 8px;">
                        <h5 class="card-title text-truncate">Nota Fiscal</h5>
                        <p class="card-text text-truncate"><strong>Carro:</strong> @Html.DisplayFor(modelItem => item.Carro.Id)</p>
                        <p class="card-text text-truncate"><strong>Placa:</strong> @Html.DisplayFor(modelItem => item.Carro.Placa)</p>
                        <p class="card-text text-truncate"><strong>Marca:</strong> @Html.DisplayFor(modelItem => item.Carro.Marca)</p>
                        <p class="card-text text-truncate"><strong>Modelo:</strong> @Html.DisplayFor(modelItem => item.Carro.Modelo)</p>
                        <p class="card-text text-truncate"><strong>Data Saída:</strong> @Html.DisplayFor(modelItem => item.DataSaida)</p>
                        <p class="card-text text-truncate"><strong>Pagamento:</strong> @Html.DisplayFor(modelItem => item.Pagamento)</p>
                        <p class="card-text text-truncate"><strong>Valor:</strong> @Html.DisplayFor(modelItem => item.ValorTotal)</p>
                    </div>
                    <div class="card-footer text-muted text-center">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                            <span class="bi bi-info-circle-fill me-1"></span> Detalhes
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
